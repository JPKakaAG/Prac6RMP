<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prac6RMP.ClockPage"
             Title="ClockPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Привязка к текущей дате и времени -->
        <Label Text="{Binding CurrentDate}" FontSize="24" HorizontalOptions="Center" />
        <Label Text="{Binding CurrentTime}" FontSize="48" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>