<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prac6RMP.StopwatchPage"
             Title="StopwatchPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label x:Name="ElapsedTimeLabel" Text="00:00:00" FontSize="48" HorizontalOptions="Center" />
        <Button Text="Старт/Стоп" Clicked="StartStopButton_Clicked" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>