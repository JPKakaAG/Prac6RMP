<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prac6RMP.AlarmPage"
             Title="AlarmPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Выберите время для будильника:" FontSize="18" HorizontalOptions="Center" />
        <TimePicker x:Name="alarmTimePicker" HorizontalOptions="Center" />
        <Button Text="Установить будильник" Clicked="SetAlarmButton_Clicked" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>